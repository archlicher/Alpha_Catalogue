<h1>Edit button <%= @button.id %> <%= @button.type_of_button %></h1>
<h3>Current count <%= @button.count %></h3>

<%= form_with(model: @button, local: true) do |form| %>
  <% if @button.errors.any? %>
    <div id="error_explanation" style="font-color: red;">
      <h2><%= pluralize(@button.errors.count, "error") %> prohibited this button from being saved:</h2>

      <ul>
      <% @button.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <input name="count" type="number" min="1" placeholder="Count" class="form-control">
  </div>

  <div class="form-group">
    <input type="checkbox" name="substract"> Substract
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-dark" %>
    <%= render 'buttons', button: @button %>
  </div>
<% end %>
