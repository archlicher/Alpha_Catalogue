    <input name="composition" type="text" placeholder="Composition" class="form-control">
  </div>
  <div class="form-group">
    <input name="weigth" type="number" min="0" placeholder="Weigth" class="form-control">
  </div>
  <div class="form-group">
    <input name="color" type="text" placeholder="Color" class="form-control">
  </div>
  <div class="form-group">
    <input name="measure" type="text" placeholder="Kg / Meter" class="form-control">
  </div>
  <div class="form-group">
    <input name="price" type="text" placeholder="Price" class="form-control">
  </div>
  <div class="form-group">
    <input name="count" type="text" placeholder="Count" class="form-control">
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-dark" %>
  </div>
<% end %>
