<h1>Edit label <%= @label.id %> <%= @label.measure %></h1>
<h3>Current count <%= @label.count %></h3>

<%= form_with(model: @label, local: true) do |form| %>
  <% if @label.errors.any? %>
    <div id="error_explanation" style="font-color: red;">
      <h2><%= pluralize(@label.errors.count, "error") %> prohibited this label from being saved:</h2>

      <ul>
      <% @label.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <input name="count" type="number" min="1" placeholder="Count" class="form-control">
  </div>

  <div class="form-group">
    <input type="checkbox" name="substract"> Substract
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-dark" %>
    <%= render 'buttons', label: @label %>
  </div>
<% end %>
