<h1><%= @article.id %> <%= @article.title %></h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Rubber</th>
      <th scope="col">Width</th>
      <th scope="col">Length</th>
    </tr>
  </thead>
  <tbody>
    <% @article.rubber_manifests.each do |r_m| %>
      <% rubber = Rubber.find(r_m.rubber_id) %>
      <tr>
        <th scope="row"><%= rubber.id %></th>
        <td><%= rubber.color %></td>
        <td><%= rubber.width %></td>
        <td><%= r_m.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if @article.rubber_manifests.count < 3 %>
  <%= link_to 'Add rubber', rubber_manifests_path, class: 'btn btn-outline-success' %>
<% end %>
<%= link_to 'Add threading', threading_manifests_path, class: 'btn btn-dark' %>
