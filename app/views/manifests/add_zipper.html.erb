<h1><%= @article.id %> <%= @article.title %></h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Zipper</th>
      <th scope="col">Length</th>
      <th scope="col">Length</th>
    </tr>
  </thead>
  <tbody>
    <% @article.zipper_manifests.each do |z_m| %>
      <% zipper = Zipper.find(z_m.rubber_id) %>
      <tr>
        <th scope="row"><%= zipper.id %></th>
        <td><%= zipper.name %></td>
        <td><%= zipper.zipper_length %></td>
        <td><%= z_m.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if @article.zipper_manifests.count < 5 %>
  <%= link_to 'Add zipper', zipper_manifests_path, class: 'btn btn-outline-success' %>
<% end %>
<%= link_to 'Complete', article_path, class: 'btn btn-dark' %>
